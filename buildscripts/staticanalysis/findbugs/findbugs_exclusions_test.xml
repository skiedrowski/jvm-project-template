<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <Match>
        <!-- do not report bugs found in classes originating from kotlin -->
        <Source name="~.*\.kt"/>
    </Match>

    <Match>
        <!-- justification: let the compiler create a correct serial version uid instead of letting the developer
        forget to update it exactly when needed -->
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
    </Match>
    <Match>
        <!-- allowed especially for JUnit @Rule classes -->
        <Bug pattern="URF_UNREAD_PUBLIC_OR_PROTECTED_FIELD"/>
    </Match>
    <Match>
        <!-- allowed in tests -->
        <Bug pattern="RV_RETURN_VALUE_IGNORED_BAD_PRACTICE"/>
    </Match>
    <Match>
        <!-- allowed in tests; this is sometimes exactly what we need to test -->
        <Bug pattern="CN_IDIOM"/>
    </Match>
    <Match>
        <Bug pattern="RV_EXCEPTION_NOT_THROWN"/>
    </Match>
</FindBugsFilter>

